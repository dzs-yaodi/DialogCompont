<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.afflimitd.datingapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.afflimitd.datingapp.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">

        <activity android:name="com.afflimitd.datingapp.ui.WebViewActivity"/>
        <activity android:name="com.afflimitd.datingapp.ui.HomeActivity"/>
        <activity android:name="com.afflimitd.datingapp.ui.SplashActivity"
            android:theme="@style/AppWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.afflimitd.datingapp.ui.LookForActivity"
             />
        <activity
            android:name="com.afflimitd.datingapp.ui.GenderActivity"
             />
        <activity
            android:name="com.afflimitd.datingapp.ui.PromptActivity"
             />

        <activity android:name="com.afflimitd.datingapp.ui.RegisterActivity"
            />

        <activity
            android:name="com.afflimitd.datingapp.ui.AgeActivity"
             />
        <activity
            android:name="com.afflimitd.datingapp.ui.EmailActivity"
             />
        <activity
            android:name="com.afflimitd.datingapp.ui.UserNameActivity"
             
            />
    </application>

</manifest>